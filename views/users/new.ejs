<%- include('../partials/header') %>
<br>
<div class="container" style="width:60%">
    <form class="d-flex flex-column" action="/users" method="POST">

      <div class="input-group margin-bottom-sm">
        <span class="input-group-addon"><i class="fa fa-user-o fa-fw" aria-hidden="true"></i></span>
        <input class="form-control" type="text" placeholder="User Name" name="username">
      </div>
      <br>
      <div class="input-group margin-bottom-sm">
        <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw" aria-hidden="true"></i></span>
        <input class="form-control" type="text" placeholder="Email" name="email">
      </div>
      <br>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
        <input class="form-control" type="password" placeholder="Password" name="password">
      </div>
      <br>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
        <input class="form-control" type="password" placeholder="Confirm Password" name="confirmPassword">
      </div>
      <div class="input-group">
        <label for="businessRadio">Business</label>
        <input class="form-control" type="radio" id="businessRadio" name="userType" value="business" checked>

        <label for="supplierRadio">Supplier</label>
        <input class="form-control" type="radio" id="supplierRadio" name="userType" value="supplier">
      </div>
      <br>
      <br>
      <input
        class="btn btn-outline-primary align-self-center"
        type="submit"
        value="Sign Up"
        style="width: 50%"
      />
    </form>
</div>
<%- include('../partials/footer') %>
